<% include ../../template/header %>
    <div class="container-fluid">
        <% include ../template/sidebar %>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
               
                <% if (error) { %>
                            <div class="alert alert-danger">
                                <%=error %>
                            </div>
                             <% } %>
                            
                <div class="table-responsive">
    
                    <form method="post" role="form" action="../edit">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Code</th>
                                    <th>Description</th>

                                </tr>
                            </thead>
                            <tbody>

                                <tr>
                                    <td>
                                        <input type="text" class="form-control" id="code" name="code" value="<%= brand['code'] %>">
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" id="desc" name="desc" value="<%= brand['desc'] %>">
                                    </td>

                                </tr>

                            </tbody>
                        </table>
                            <button type="submit" class="btn btn-default">保存修改</button>
                            <a href="../create" class="btn btn-default">取消</a>
                    </form>
                </div>
            </div>
    </div>
    
    <script >
         $(document).ready(function(){
            $('#btn_click').on('click', function() { window.location = '../create'; });
         });
    </script>
    <% include ../template/footer %>